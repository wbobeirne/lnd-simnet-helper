{
  "name": "lnd-simnet-configs",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "btcd": "btcd --configfile=./btcd/btcd.conf --datadir=./btcd/data --logdir=./btcd/logs",
    
    "start": "concurrently -n alice,bob,charlie 'lnd --lnddir=./alice' 'lnd --lnddir=./bob' 'lnd --lnddir=./charlie'",
    "cmd": "ts-node scripts/cmd.ts",
    "connection-info": "ts-node scripts/connectionInfo.ts"
  },
  "dependencies": {
    "chalk": "2.4.2",
    "concurrently": "4.0.1",
    "fs-extra": "7.0.1",
    "ini": "1.3.5",
    "inquirer": "6.2.2",
    "ts-node": "8.0.3",
    "typescript": "3.3.4000",
    "yargs": "13.2.2"
  },
  "devDependencies": {
    "@types/fs-extra": "5.0.5",
    "@types/ini": "1.3.30",
    "@types/inquirer": "6.0.0",
    "@types/yargs": "12.0.10"
  }
}
